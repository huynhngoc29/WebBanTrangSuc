@model WebBanTrangSuc.Models.Product



<h2>Chi tiết sản phẩm</h2>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Giá:</strong> @Model.Price</p>
    <p><strong>Mô tả:</strong> @Model.Description</p>
    <p><strong>Danh mục:</strong> @Model.Category.Name</p>
    <p><img src="@Model.ImageUrl" alt="product image" width="200" /></p>
</div>

<a href="@Url.Action("Products", "Admin")" class="btn btn-primary">Quay lại</a>
