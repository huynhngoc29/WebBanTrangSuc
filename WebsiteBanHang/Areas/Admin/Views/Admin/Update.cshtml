@model WebBanTrangSuc.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Product";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .pb-3 {
        max-width: 700px;
        margin: 50px auto;
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 28px;
        font-weight: 600;
        color: #ee4d2d;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group label {
        font-size: 16px;
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

        .form-control:focus {
            border-color: #ee4d2d;
            outline: none;
            box-shadow: 0 0 5px rgba(238, 77, 45, 0.5);
        }

    .form-group img {
        margin-top: 10px;
        max-width: 200px;
        height: auto;
        border-radius: 8px;
    }

    input[type="file"] {
        margin-top: 10px;
        padding: 12px;
        font-size: 14px;
        width: 100%;
        background-color: #f1f1f1;
        border-radius: 8px;
    }

        input[type="file"]:focus {
            outline: none;
            border-color: #ee4d2d;
        }

    #previewImage {
        margin-top: 20px;
        max-width: 200px;
        height: auto;
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 5px;
    }
</style>

<div class="pb-3">
    <h2>Edit Product</h2>

    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Quantity">Số lượng</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        @if (Model.CategoryId == 1 && Model.Variants?.Any() == true)
        {
            <h5 class="fw-bold mt-4">Cập nhật tồn kho từng size</h5>
            <div class="row">
                @for (int i = 0; i < Model.Variants.Count; i++)
                {
                    <div class="col-md-4 mb-2">
                        <label>Size @Model.Variants[i].Size:</label>
                        <input type="hidden" name="Variants[@i].Id" value="@Model.Variants[i].Id" />
                        <input type="hidden" name="Variants[@i].Size" value="@Model.Variants[i].Size" />
                        <input type="number" name="Variants[@i].Stock" value="@Model.Variants[i].Stock" class="form-control" min="0" />
                    </div>
                }
            </div>
        }

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Product Image</label>
            <input type="file" asp-for="ImageUrl" class="form-control" />
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 200px;" />
        </div>

        <div class="col-8">
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width:200px;" id="previewImage" />
        </div>

        <button type="submit" class="btn btn-primary" style="margin-left: 80px; margin-top: 20px; height: 40px">💾 Update</button>
        <a href="@Url.Action("Product", "Admin", new { area = "Admin" })" class="btn btn-secondary" style="margin-left: 250px;margin-top: 20px; height: 40px">❌ Cancel</a>
    </form>

    <script>
        document.querySelectorAll('input[type="file"]').forEach(input => {
            input.addEventListener('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = document.getElementById("previewImage")
                        img.src = e.target.result
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
</div>
