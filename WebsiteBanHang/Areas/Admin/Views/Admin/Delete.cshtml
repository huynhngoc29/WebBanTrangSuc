@model WebBanTrangSuc.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Product";
}

<!-- Bootstrap & Google Fonts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Tùy chỉnh CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .pb-3 {
        max-width: 700px;
        margin: 50px auto;
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 28px;
        font-weight: 600;
        color: #ee4d2d;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group label {
        font-size: 16px;
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .btn {
        background-color: #ee4d2d;
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
        width: 100%;
    }

        .btn:hover {
            background-color: #d84315;
        }

    .btn-secondary {
        background-color: #6c757d;
        padding: 12px 25px;
        border-radius: 10px;
        font-size: 18px;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .text-center {
        text-align: center;
    }

    .product-image {
        max-width: 200px; /* Giới hạn kích thước tối đa của hình ảnh */
        height: auto; /* Duy trì tỷ lệ khung hình */
        border-radius: 8px;
        margin-top: 15px;
    }

</style>

<!-- Modal for Delete Confirmation -->
<div class="pb-3">
    <h2>Delete Product</h2>

    <div class="modal-body">
        <h4><strong>Name:</strong> @Model.Name</h4>
        <h4><strong>Price:</strong> @Model.Price.ToString("N0") ₫</h4>
        <h4><strong>Description:</strong> @Model.Description</h4>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" class="product-image" />
        }
        else
        {
            <p>No image available</p>
        }
        <p>Are you sure you want to delete @Model.Name?</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">🗑 Delete</button>
            <a href="@Url.Action("Product", "Admin", new { area = "Admin" })" class="btn btn-secondary">❌ Cancel</a>
        </div>
    </form>
</div>
