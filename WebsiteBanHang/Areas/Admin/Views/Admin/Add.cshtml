@model WebBanTrangSuc.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Product";
}
<link rel="shortcut icon" href="https://cdn.haitrieu.com/wp-content/uploads/2022/01/Icon.png" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .pb-3 {
        max-width: 700px;
        margin: 50px auto;
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 28px;
        font-weight: 600;
        color: #ee4d2d;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group label {
        font-size: 16px;
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

        .form-control:focus {
            border-color: #ee4d2d;
            outline: none;
            box-shadow: 0 0 5px rgba(238, 77, 45, 0.5);
        }

    .form-group img {
        margin-top: 10px;
        max-width: 200px;
        height: auto;
        border-radius: 8px;
    }

    input[type="file"] {
        margin-top: 10px;
        padding: 12px;
        font-size: 14px;
        width: 100%;
        background-color: #f1f1f1;
        border-radius: 8px;
    }

        input[type="file"]:focus {
            outline: none;
            border-color: #ee4d2d;
        }

    #previewImage {
        margin-top: 20px;
        max-width: 200px;
        height: auto;
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 5px;
    }
</style>

<div class="pb-3">
    <h2>Add Product</h2>

    <form asp-action="Add" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity">Số lượng</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CategoryId">Danh mục</label>
            @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.Categories, "Chọn danh mục", new { @class = "form-control", @id = "CategoryId" })
        </div>

        <div class="form-group">
            <label for="SubCategoryId">Loại sản phẩm con</label>
            @Html.DropDownListFor(m => m.SubCategoryId, (SelectList)ViewBag.SubCategories, "Chọn loại", new { @class = "form-control", @id = "SubCategoryId" })
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Ảnh đại diện</label>
            <input type="file" name="imageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">💾 Lưu</button>
        <a href="@Url.Action("Product", "Admin", new { area = "Admin" })" class="btn btn-secondary">❌ Hủy</a>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CategoryId').change(function () {
                var categoryId = $(this).val();
                if (categoryId) {
                    $.ajax({
                        url: '/Admin/GetSubCategoriesByCategory',
                        type: 'GET',
                        data: { categoryId: categoryId },
                        success: function (data) {
                            var subSelect = $('#SubCategoryId');
                            subSelect.empty();
                            subSelect.append($('<option>', {
                                value: '',
                                text: 'Chọn loại'
                            }));
                            $.each(data, function (i, item) {
                                subSelect.append($('<option>', {
                                    value: item.value,
                                    text: item.text
                                }));
                            });
                        }
                    });
                } else {
                    $('#SubCategoryId').empty().append($('<option>', {
                        value: '',
                        text: 'Chọn loại'
                    }));
                }
            });
        });
    </script>
}
