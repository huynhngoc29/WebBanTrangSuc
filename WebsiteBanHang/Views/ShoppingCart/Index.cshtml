@model ShoppingCart
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container mt-4">
    <h2 class="mb-4">🛒 Giỏ hàng của bạn</h2>

    @if (Model.Items != null && Model.Items.Count > 0)
    {
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Thành tiền</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("N0") ₫</td>
                        <td>@(item.Price * item.Quantity)VNĐ</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end">
            <a asp-action="Checkout" class="btn btn-success">
                <i class="bi bi-credit-card"></i> Tới trang thanh toán
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Giỏ hàng của bạn đang trống.
        </div>
    }
</div>
