@model List<WebBanTrangSuc.Models.Product>

@{
    ViewData["Title"] = "Flash Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="FlashSale">
    <div class="FlashSaleTitle">
        <img src="https://theme.hstatic.net/200000274839/1000946002/14/flash-sale.png?v=76" class="card-img-top" alt="Flash Sale" style="width: 200px" height="70px">
    </div>
    <div class="ProductSale" style="display: flex; justify-content: space-between;">
        @if (Model == null || !Model.Any())
        {
            <p>@ViewBag.Message</p>  <!-- Hiển thị thông báo nếu không có sản phẩm giảm giá -->
        }
        else
        {
            @foreach (var product in Model)
            {
                <div class="card" style="width: 18rem;">
                    <div class="sale-label">@product.DiscountPercentage% GIẢM</div>
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <div class="d-flex justify-content-between">
                            <p class="card-price" style="font-weight: bold; color: #e74c3c;">@String.Format("{0:C}", product.Price * (1 - product.DiscountPercentage / 100))</p>
                            <p class="card-price-old" style="text-decoration: line-through; color: #7f8c8d;">@String.Format("{0:C}", product.Price)</p>
                        </div>
                        <p class="sold-status" style="color: #e74c3c; font-weight: bold; margin-top: 10px;">🔥 Đã bán 21 sản phẩm</p>
                    </div>
                </div>
            }
        }
    </div>
</div>
