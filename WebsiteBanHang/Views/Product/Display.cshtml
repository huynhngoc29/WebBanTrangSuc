@model WebBanTrangSuc.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<!-- Bootstrap & Google Fonts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Tùy chỉnh CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .details-container {
        max-width: 700px;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-weight: 600;
        color: #ee4d2d;
    }

    .product-img {
        max-width: 100%;
        border-radius: 5px;
        transition: transform 0.3s ease-in-out;
    }

        .product-img:hover {
            transform: scale(1.05);
        }

    .additional-img {
        width: 100px;
        height: auto;
        margin: 5px;
        border-radius: 5px;
        transition: transform 0.3s ease-in-out;
    }

        .additional-img:hover {
            transform: scale(1.1);
        }

    .btn-primary {
        background-color: #ee4d2d;
        border: none;
    }

        .btn-primary:hover {
            background-color: #d84315;
        }

    .btn-secondary {
        background-color: #6c757d;
    }
</style>

<!-- Container chính -->
<div class="container d-flex justify-content-center mt-4">
    <div class="details-container">
        <h2 class="mb-4 text-center">📌 Product Details</h2>

        <div class="text-center">
            <!-- Hiển thị ảnh chính -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3">
                    <img src="@Model.ImageUrl" class="product-img" alt="Product Image">
                </div>
            }

            <!-- Hiển thị danh sách ảnh phụ -->
            @if (Model.ImageUrls != null && Model.ImageUrls.Any())
            {
                <div class="mb-3">
                    <h5>📷 Additional Images:</h5>
                    @foreach (var imageUrl in Model.ImageUrls)
                    {
                        <img src="@imageUrl" class="additional-img" alt="Additional Image">
                    }
                </div>
            }
        </div>

        <div>
            <h4>📌 Name: <span class="fw-bold">@Model.Name</span></h4>
            <h4>💰 Price: <span class="text-danger fw-bold">@Model.Price.ToString("N0") $</span></h4>
            <h4>📝 Description:</h4>
            <p>@Model.Description</p>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">⬅ Back to List</a>
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">✏ Edit Product</a>
        </div>
    </div>
</div>
