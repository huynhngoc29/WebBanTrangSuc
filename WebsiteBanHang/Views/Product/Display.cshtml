@model WebBanTrangSuc.Models.Product
@using Microsoft.AspNetCore.Identity

<a asp-action="Index" class="btn btn-link"><i class="fa fa-arrow-left"></i> Back to List</a>

<div class="container mt-4 flex justify-content-center">
    <div class="row w-100">
        <!-- Cột Hình Ảnh -->
        <div class="col-md-5 d-flex justify-content-center align-items-start">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Product Image"
                     style="max-width: 80%; height: auto; object-fit: contain;">
            }
            else
            {
                <p class="text-muted">No Image Available</p>
            }
        </div>

        <!-- Cột Thông Tin (Căn lên trên cùng) -->
        <div class="col-md-7 d-flex justify-content-center align-items-start">
            <div class="card-body">
                <h2 class="card-title fw-bold">@Model.Name</h2>
                <h4 class="text-danger fw-bold">Price: @Model.Price.ToString("N0") VND</h4>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
				<p class="card-text"><strong>Category:</strong> @Model.Category.Name</p>
				<p class="card-text"><strong>Quantity:</strong> @Model.Quantity</p>
                @if (Model.Quantity > 0)
                {
                    <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@Model.Id" asp-route-quantity="1">
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="bi-cart-fill me-1"></i> Mua Ngay
                        </button>
                    </a>
                }
                else
                {
                    <span class="badge bg-danger text-white">Hết hàng</span>
                }

            </div>
        </div>
    </div>


    <!-- Đặt phần "Sản phẩm tương tự" dưới phần thông tin sản phẩm -->
    <h3 class="fw-bold mt-5">Sản Phẩm Tương Tự</h3>
    <div class="row mt-2">
        @foreach (var similarProduct in ViewBag.SimilarProducts as List<WebBanTrangSuc.Models.Product>)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card product-card h-100 shadow-sm">
                    <!-- Hình ảnh sản phẩm -->
                    <div class="position-relative overflow-hidden">
                        <img src="@similarProduct.ImageUrl" class="card-img-top product-img"
                             alt="Product Image">
                    </div>

                    <!-- Nội dung sản phẩm -->
                    <div class="card-body text-center">
                        <h5 class="card-title">@similarProduct.Name</h5>
                        <p class="text-primary fw-bold">@similarProduct.Price.ToString("N0") VND</p>
                        <p class="card-text text-muted">@similarProduct.Description</p>
                    </div>


                    <!-- Nút Action -->
                    <div class="card-footer text-center">
                        <a asp-action="Display" asp-route-id="@similarProduct.Id" class="btn btn-outline-info btn-sm">Xem</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease-in-out;
    }

        .product-card:hover {
            transform: scale(1.05);
        }

    .product-img {
        height: 250px;
        width: 100%;
        object-fit: contain;
        padding: 10px;
        transition: transform 0.3s ease-in-out;
    }

    .product-card:hover .product-img {
        transform: scale(1.1);
    }
</style>





