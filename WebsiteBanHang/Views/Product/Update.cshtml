@model WebBanTrangSuc.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<!-- Bootstrap & Google Fonts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Tùy chỉnh CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .edit-container {
        max-width: 600px;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-weight: 600;
        color: #ee4d2d;
    }

    .btn-primary {
        background-color: #ee4d2d;
        border: none;
    }

        .btn-primary:hover {
            background-color: #d84315;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

    .img-thumbnail {
        max-width: 100%;
        border-radius: 5px;
        transition: transform 0.3s ease-in-out;
    }

        .img-thumbnail:hover {
            transform: scale(1.05);
        }

    .form-control {
        border-radius: 5px;
    }

    input[type="file"] {
        cursor: pointer;
    }
</style>

<!-- Container chính -->
<div class="container d-flex justify-content-center mt-4">
    <div class="edit-container">
        <h2 class="mb-4 text-center">✏ Edit Product</h2>

        <form asp-action="Update" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price ($)</label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Hiển thị ảnh hiện tại -->
            <div class="mb-3 text-center">
                <label class="form-label">Current Image</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 250px; height: auto;" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>

            <!-- Upload ảnh mới -->
            <div class="mb-3">
                <label class="form-label">Change Image</label>
                <input type="file" name="imageUrl" class="form-control" />
            </div>

            <!-- Upload danh sách ảnh mới -->
            <div class="mb-3">
                <label class="form-label">Additional Images</label>
                <input type="file" name="imagesUrls" class="form-control" multiple />
            </div>

            <!-- Chọn danh mục sản phẩm -->
            <div class="mb-3">
                <label for="CategoryId" class="form-label">Category</label>
                @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.Categories, "Select Category", new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Nút cập nhật -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">💾 Update</button>
                <a asp-action="Index" class="btn btn-secondary">❌ Cancel</a>
            </div>
        </form>
    </div>
</div>
