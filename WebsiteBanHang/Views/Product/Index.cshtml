@model IEnumerable<WebBanTrangSuc.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<!-- Bootstrap & Google Fonts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Tùy chỉnh CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .sort-btn {
        display: flex;
        align-items: center;
        font-size: 18px;
        font-weight: bold;
        color: #777;
        cursor: pointer;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .sort-btn:hover {
            color: #ee4d2d;
        }

        .sort-btn::after {
            content: "⬍"; /* Biểu tượng mặc định */
            font-size: 14px;
            margin-left: 5px;
        }

        .sort-btn.asc::after {
            content: "⬆"; /* Mũi tên lên khi sắp xếp từ thấp -> cao */
        }

        .sort-btn.desc::after {
            content: "⬇"; /* Mũi tên xuống khi sắp xếp từ cao -> thấp */
        }

    .container {
        max-width: 1200px;
    }

    h2 {
        font-weight: 600;
        color: #ee4d2d;
    }

    .search-bar {
        width: 350px;
    }

    .btn-search {
        background-color: #ee4d2d;
        color: white;
    }

    .product-card {
        transition: transform 0.3s ease-in-out;
        border-radius: 10px;
        overflow: hidden;
        background: white;
        padding: 10px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .product-img {
        width: 100%;
        height: 200px;
        object-fit: contain;
        background-color: #fff;
        padding: 10px;
    }

    .product-title {
        font-weight: 600;
    }

    .product-price {
        font-size: 18px;
        color: #ee4d2d;
        font-weight: bold;
    }

    .product-actions .btn {
        font-size: 14px;
        padding: 5px 10px;
        margin: 2px;
    }
</style>

<div class="container mt-4">
    <!-- Thanh tìm kiếm và bộ lọc -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>🛒 Product List</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Add" class="btn btn-success">➕ Add Product</a>
            <a asp-controller="Category" asp-action="Add" class="btn btn-primary">+ Add Category</a>
        }
        <form method="get" class="d-flex">
            <!-- Dropdown lọc theo danh mục -->
            <select name="categoryId" class="form-select me-2" style="width: 200px;" onchange="updateFilter()">
                <option value="">📂 Tất cả danh mục</option>
                @if (ViewBag.Categories != null)
                {
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value" selected="@(ViewBag.CategoryId?.ToString() == category.Value ? "selected" : null)">
                            @category.Text
                        </option>
                    }
                }
            </select>

            <!-- Ô tìm kiếm -->
            <input type="text" name="search" placeholder="Search product..." class="form-control search-bar me-2" value="@ViewBag.Search" />

            <!-- Nút search -->
            <button type="submit" class="btn btn-search">🔍 Search</button>
        </form>
        <!-- Liên kết giỏ hàng -->
        <a href="@Url.Action("Index", "ShoppingCart")" class="nav-link">
            🛒 Cart (@ViewBag.CartItemCount)
        </a>
    </div>

    <!-- Bộ lọc giá -->
    <div class="d-flex align-items-center mb-3">
        <label class="me-2 fw-bold text-muted">Giá</label>
        <a href="javascript:void(0);" onclick="updateSortOrder()"
           class="sort-btn @(ViewBag.SortOrder == "asc" ? "asc" : "desc")">⬆⬇</a>
    </div>

    <!-- Hiển thị sản phẩm -->
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card shadow-sm border-0">
                    <img src="@product.ImageUrl" class="card-img-top product-img" alt="Product Image">
                    <div class="card-body text-center">
                        <h5 class="product-title text-truncate">@product.Name</h5>
                        <p class="product-price">💰 @product.Price.ToString("N0") ₫</p>
                        <p class="text-muted text-truncate">@product.Description</p>
                        <div class="d-flex justify-content-center product-actions">
                            <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-primary">👁 View</a>
                            <!-- Thêm vào giỏ hàng -->
                            <form method="post" asp-action="AddToCart" asp-controller="Product" id="addToCartForm">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="number" name="quantity" value="1" min="1" id="quantityInput" class="form-control" style="width: 70px;" />
                                <button type="submit" class="btn btn-success">Thêm vào giỏ hàng</button>
                            </form>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">✏ Edit</a>
                                <a href="javascript:void(0);" onclick="confirmDelete('@product.Id')" class="btn btn-danger">🗑 Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal Hiển Thị Giỏ Hàng -->
<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cartModalLabel">Giỏ Hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="cartDetails">
                    <!-- Chi tiết giỏ hàng sẽ hiển thị ở đây -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <a href="/ShoppingCart" class="btn btn-primary">Đi đến giỏ hàng</a>
            </div>
        </div>
    </div>
</div>

<script>
    function updateFilter() {
        var categoryId = document.querySelector('select[name="categoryId"]').value;
        var search = document.querySelector('input[name="search"]').value;
        var sortOrder = new URLSearchParams(window.location.search).get('sortOrder') || 'asc';

        window.location.href = `?categoryId=${categoryId}&search=${search}&sortOrder=${sortOrder}`;
    }

    function updateSortOrder() {
        var categoryId = document.querySelector('select[name="categoryId"]').value;
        var search = document.querySelector('input[name="search"]').value;
        var currentSortOrder = new URLSearchParams(window.location.search).get('sortOrder') || 'asc';
        var newSortOrder = currentSortOrder === "asc" ? "desc" : "asc";

        window.location.href = `?categoryId=${categoryId}&search=${search}&sortOrder=${newSortOrder}`;
    }

    $(document).ready(function () {
        $("#addToCartForm").submit(function (event) {
            event.preventDefault();

            // Lấy giá trị số lượng và sản phẩm
            var productId = $("input[name='productId']").val();
            var quantity = $("#quantityInput").val();

            // Gửi dữ liệu đến server để thêm vào giỏ hàng
            $.ajax({
                url: '/Product/AddToCart',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (response) {
                    // Hiển thị modal với thông tin giỏ hàng
                    var productName = response.productName;
                    var price = response.price;
                    var total = price * quantity;

                    $("#cartDetails").html(`
                        <p><strong>Sản phẩm:</strong> ${productName}</p>
                        <p><strong>Số lượng:</strong> ${quantity}</p>
                        <p><strong>Giá:</strong> ${price.toLocaleString()} VND</p>
                        <p><strong>Tổng cộng:</strong> ${total.toLocaleString()} VND</p>
                    `);

                    $('#cartModal').modal('show');
                },
                error: function () {
                    alert("Có lỗi xảy ra. Vui lòng thử lại!");
                }
            });
        });
    });
</script>
