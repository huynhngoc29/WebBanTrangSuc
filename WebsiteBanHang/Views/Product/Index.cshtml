@model IEnumerable<WebBanTrangSuc.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager

@{
    var currentUser = await userManager.GetUserAsync(User);
    int numOfQuality = 1;
}


<!-- Bootstrap & Google Fonts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Tùy chỉnh CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .sort-btn {
        display: flex;
        align-items: center;
        font-size: 18px;
        font-weight: bold;
        color: #777;
        cursor: pointer;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .sort-btn:hover {
            color: #ee4d2d;
        }

        .sort-btn::after {
            content: "⬍"; /* Biểu tượng mặc định */
            font-size: 14px;
            margin-left: 5px;
        }

        .sort-btn.asc::after {
            content: "⬆"; /* Mũi tên lên khi sắp xếp từ thấp -> cao */
        }

        .sort-btn.desc::after {
            content: "⬇"; /* Mũi tên xuống khi sắp xếp từ cao -> thấp */
        }

    .container {
        max-width: 1200px;
    }

    h2 {
        font-weight: 600;
        color: #ee4d2d;
    }

    .search-bar {
        width: 350px;
    }

    .btn-search {
        background-color: #ee4d2d;
        color: white;
    }

    .product-card {
        transition: transform 0.3s ease-in-out;
        border-radius: 10px;
        overflow: hidden;
        background: white;
        padding: 10px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .product-img {
        width: 100%;
        height: 200px;
        object-fit: contain;
        background-color: #fff;
        padding: 10px;
    }

    .product-title {
        font-weight: 600;
    }

    .product-price {
        font-size: 18px;
        color: #ee4d2d;
        font-weight: bold;
    }

    .product-actions .btn {
        font-size: 14px;
        padding: 5px 10px;
        margin: 2px;
    }
</style>
<div class="container mt-4">
    <!-- Tiêu đề + nút thêm sản phẩm, chỉ hiển thị cho Admin -->
    <section class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="fw-bold">Danh Sách Điện Thoại</h2>
            @if (currentUser != null && User.IsInRole("Admin"))
            {
                <a href="/Admin/Product" class="btn btn-outline-primary">
                    <i class="fa fa-plus"></i> Quản lý sản phẩm
                </a>
            }

        </div>
    </section>
    <form method="get" asp-controller="Product" asp-action="Index" class="d-flex">
        <!-- Dropdown danh mục -->
        <select name="categoryId" class="form-select me-2" style="width: 200px;" onchange="updateFilter()">
            <option value="">📂 Tất cả danh mục</option>
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Value" selected="@(ViewBag.SelectedCategory?.ToString() == category.Value ? "selected" : null)">
                        @category.Text
                    </option>
                }
            }
        </select>

        @* <!-- Sửa lại tên input --> *@
        @* <input type="text" name="searchTerm" placeholder="Bạn tìm gì..." class="form-control search-bar me-2" value="@ViewBag.SearchTerm" /> *@

        @* <!-- Nút search --> *@
        @* <button type="submit" class="btn btn-search">🔍 Search</button> *@
    </form>

    <!-- Danh sách sản phẩm dạng GRID -->
    <section>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card product-card h-100 shadow-sm">
                        <!-- Hình ảnh sản phẩm -->
                        <div class="position-relative overflow-hidden">
                            <img src="@product.ImageUrl" class="card-img-top product-img"
                                 alt="Product Image">
                        </div>

                        <!-- Nội dung sản phẩm -->
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-primary fw-bold">@product.Price.ToString("N0") VND</p>
                            <p class="card-text text-muted">@product.Description</p>
                        </div>

                        <!-- Nút Action: Chỉ hiển thị cho Admin -->
                        <div class="card-footer text-center">
                            <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm">Xem</a>
                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@product.Id" asp-route-quantity="@numOfQuality">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="bi-cart-fill me-1"></i> Mua Ngay
                                </button>
                            </a>
                            @if (currentUser != null && User.IsInRole("Admin"))
                            {
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-outline-warning btn-sm">Chỉnh sửa</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">Xóa</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

<script>
    function updateFilter() {
        var categoryId = document.querySelector('select[name="categoryId"]').value;
        var search = document.querySelector('input[name="search"]').value;
        var sortOrder = new URLSearchParams(window.location.search).get('sortOrder') || 'asc';

        window.location.href = `?categoryId=${categoryId}&search=${search}&sortOrder=${sortOrder}`;
    }

    function updateSortOrder() {
        var categoryId = document.querySelector('select[name="categoryId"]').value;
        var search = document.querySelector('input[name="search"]').value;
        var currentSortOrder = new URLSearchParams(window.location.search).get('sortOrder') || 'asc';
        var newSortOrder = currentSortOrder === "asc" ? "desc" : "asc";

        window.location.href = `?categoryId=${categoryId}&search=${search}&sortOrder=${newSortOrder}`;
    }

    $(document).ready(function () {
        $("#addToCartForm").submit(function (event) {
            event.preventDefault();

            // Lấy giá trị số lượng và sản phẩm
            var productId = $("input[name='productId']").val();
            var quantity = $("#quantityInput").val();

            // Gửi dữ liệu đến server để thêm vào giỏ hàng
            $.ajax({
                url: '/Product/AddToCart',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (response) {
                    // Hiển thị modal với thông tin giỏ hàng
                    var productName = response.productName;
                    var price = response.price;
                    var total = price * quantity;

                    $("#cartDetails").html(`
                        <p><strong>Sản phẩm:</strong> ${productName}</p>
                        <p><strong>Số lượng:</strong> ${quantity}</p>
                        <p><strong>Giá:</strong> ${price.toLocaleString()} VND</p>
                        <p><strong>Tổng cộng:</strong> ${total.toLocaleString()} VND</p>
                    `);

                    $('#cartModal').modal('show');
                },
                error: function () {
                    alert("Có lỗi xảy ra. Vui lòng thử lại!");
                }
            });
        });
    });
</script>

