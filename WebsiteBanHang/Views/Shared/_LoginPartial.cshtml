@using Microsoft.AspNetCore.Identity
@using WebBanTrangSuc.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style=" margin:8px">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item" style=" margin:8px">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><i class="bi bi-box-arrow-right "></i>Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item" style=" margin:8px">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus"></i>Register</a>
    </li>
        <li class="nav-item" style=" margin:8px">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="bi  bi-person-lock "></i>Login</a>
    </li>
}
</ul>
