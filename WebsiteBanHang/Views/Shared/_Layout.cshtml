<!DOCTYPE html>
<html lang="en">
<head>
   
        <!-- Các liên kết khác như CSS của bạn -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
   

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanTrangSuc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanTrangSuc.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>




</head>
<body>
    <header style="background-color: white" >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="padding-left: 10%; padding-right: 10%">
                <!-- Chỉnh sửa kích thước logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://webadmin.beeart.vn/upload/image/20220618/6379113683653212208877311.png" alt="Alternate Text" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @* thanh tim kiem *@
                <form class="d-flex mx-auto" role="search">
                    <input class="form-control me-2" type="search" placeholder="Bạn tìm gì..." aria-label="Search" style="border-radius: 50px;">
                </form>
                <!-- Thanh menu bên dưới logo -->
                <!-- Các nút Giỏ hàng và Đăng nhập -->
                <div class="d-flex">
                    <a href="#" class="nav-link"><i class="bi bi-cart"></i> Giỏ Hàng</a>
                    <a href="#" class="nav-link"><i class="bi bi-person"></i> Đăng Nhập</a>
                </div>
            </div>
        </nav>
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                     Nhẫn
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Nhẫn A</a></li>
                                    <li><a class="dropdown-item" href="#">Nhẫn B</a></li>
                                    <li><a class="dropdown-item" href="#">Nhẫn C</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                     Bông Tai
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown2">
                                    <li><a class="dropdown-item" href="#">Bông Tai A</a></li>
                                    <li><a class="dropdown-item" href="#">Bông Tai B</a></li>   
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown3" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                     Mặt Dây Chuyền
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown3">
                                    <li><a class="dropdown-item" href="#">Mặt Dây Chuyền A</a></li>
                                    <li><a class="dropdown-item" href="#">Mặt Dây Chuyền B</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown4" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                     Dây Cổ
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown4">
                                    <li><a class="dropdown-item" href="#">Dây Cổ A</a></li>
                                    <li><a class="dropdown-item" href="#">Dây Cổ B</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown5" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Lắc - Vòng Tay
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown5">
                                    <li><a class="dropdown-item" href="#">Lắc Tay A</a></li>
                                    <li><a class="dropdown-item" href="#">Lắc Tay B</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown6" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Đồng Hồ
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown6">
                                    <li><a class="dropdown-item" href="#">Đồng Hồ A</a></li>
                                    <li><a class="dropdown-item" href="#">Đồng Hồ B</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown7" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Dây Chuyền
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown7">
                                    <li><a class="dropdown-item" href="#">Dây Chuyền A</a></li>
                                    <li><a class="dropdown-item" href="#">Dây Chuyền B</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-chat-dots"></i> Liên Hệ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="bi bi-pencil-square"></i> Blogs
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
       

           
            


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="bg-dark text-light py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-4">About Us</h5>
                    <p class="mb-4">
                        We are dedicated to providing innovative solutions that help businesses grow and succeed
                        in the digital age.
                    </p>
                    <div class="social-links">
                        <a href="#" class="social-icon bg-primary"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon bg-info"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon bg-danger"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon bg-primary"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="mb-4">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">Home</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">About</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Services</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Portfolio</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Contact</a></li>
                    </ul>
                </div>

                <!-- Services -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="mb-4">Services</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">Web Design</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Development</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Marketing</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Consulting</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Analytics</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-4">Contact Info</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            123 Business Street, New York, NY 10001
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone me-2"></i>
                            <a href="tel:+1234567890" class="footer-link">+1 (234) 567-890</a>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-envelope me-2"></i>
                            <a href="mailto:contact@example.com" class="footer-link">contact@example.com</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <div class="row mt-5">
                <div class="col-12">
                    <hr class="mb-4">
                    <div class="text-center">
                        <p class="mb-0">&copy; 2024 Your Company. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
