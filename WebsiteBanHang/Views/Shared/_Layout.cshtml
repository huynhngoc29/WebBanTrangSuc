<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanTrangSuc</title>

    <!-- CSS Bootstrap local -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanTrangSuc.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">


</head>
<body>
    
    <header style="background-color: white" >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="padding-left: 10%; padding-right: 10%">
                <!-- Chỉnh sửa kích thước logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="http://rubee.com.vn/admin/webroot/upload/image//images/logo-PNJ-2.png" alt="Alternate Text" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @* thanh tim kiem *@
                <form asp-controller="Product" asp-action="Index" method="get" class="d-flex mx-auto" role="search" style="max-width: 500px;">
                    <input name="searchTerm" class="form-control me-2" value="@ViewBag.SearchTerm" type="search" placeholder="Bạn tìm gì..." aria-label="Search" style="border-radius: 50px;">
                    <button type="submit" class="btn btn-outline-secondary rounded-circle">
                        <i class="bi bi-search"></i>
                    </button>
                </form>


                <!-- Thanh menu bên dưới logo -->
                <!-- Các nút Giỏ hàng và Đăng nhập -->
                <div class="d-flex">
                    <a href="@Url.Action("Index", "ShoppingCart")" class="nav-link" style="margin-top : 7px">
                        <i class="bi bi-cart"></i> Giỏ Hàng
                    </a>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">

                <!-- Nút toggle menu (bắt buộc cho responsive và dropdown hoạt động) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu động từ ViewComponent -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    @await Component.InvokeAsync("CategoryMenu")
                </div>

            </div>
        </nav>


           
            


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer">
        <div class="container-fluid d-flex justify-content-between">
            <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">&copy; 2025 - Website Trang Sức</span>
            <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Thùy Oanh - Huỳnh Ngọc </span>
        </div>

        <div class="social-links">
            <a href="#" class="social-icon bg-primary"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social-icon bg-info"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-icon bg-danger"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-icon bg-primary"><i class="fab fa-linkedin-in"></i></a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    

